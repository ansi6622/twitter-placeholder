<!-- {{title}} -->
<header>
  <h2>Twitter-Placeholder</h2>
</header>
<main>
  <form method="post" action="/users/signup">
    <div id="signInForm" class="demo-card-wide mdl-card mdl-shadow--2dp">
      <input type="text" placeholder="name" name="name" id="nameInput">
      <input type="text" placeholder="email" name="email" id="emailInput">
      <input type="password" placeholder="password" name="password" id="passwordInput">
      <button name="signUpBtn" class="signingBtns" id="signUpBtn">Sign Up</button>
      <button name="logInBtn" class="signingBtns" id="logInBtn">Log In</button>
    </div>
  </form>
</main>
<aside class="indexImg">
  <img src="./stylesheets/twitter-placeholder.png" alt="random pic" />
</aside>
